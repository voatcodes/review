<%- include('partials/header') %>

<main class="container" id="rbpmain">
    <div class="firstandsecondsectionrbpa">
        <div class="firstsectionrbpa">
            <img id="rbpimg" src="/uploads/<%= profile.b_photoURL %>" alt="">
            <p id="jina"><%= profile.b_name %></p>
            <p id="rbpdescription"><%= profile.b_description %></p>
            <p id="rbpcontact"> <img id="rbpaicons" src="/uploads/telephone-call.png"><%= profile.b_phone_number %></p>
            <p id="rbpemail"><img id="rbpaicons" src="/uploads/email.png"><%= profile.b_email %></p>
            <p id="rbplocation"><img id="rbpaicons" src="/uploads/pin.png"><%= profile.b_location %></p>

            <% if (locals.user === "reviewer") {%>
                <a id="rbp1" href="/review/<%= profile.b_id%>"> Write a review </a>
            <%  }%>

           
        
       
        </div>

        <div class="secondsectionrbpa">


            <% if (reviews.length > 0) { %>
                <% reviews.forEach(review => {%>
                    <div class="review">
                       <div class="profile-pic">
                        <!-- <img src="/uploads/<%= review.photoURL %>" alt=""> -->
                       </div>
                        <div class="info">
                            <h1><%= review.fullname %></h1>
                            <p> <%= review.review %></p>
                            <div > 
                                <% if(JSON.parse(review.pictures).length > 0){ %>
                                    <% JSON.parse(review.pictures).forEach( picture => { %>
                                        <img class="photosfromreviews" src="/uploads/<%= picture%>" alt="">
    
                                    <% }) %>
                               <%  }%>
                            </div>
                            <small><%= review.date_posted.toString().split(' G')[0] %></small>
                        </div>
                    </div>
    
                <% })%>

            <% } else { %>

                <h3>This business has not been reviewed yet</h3>

            <% }%>



            



        </div>
    
